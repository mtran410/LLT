<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="llc.locallasertag"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="llc.locallasertag.MainActivity"> 
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            </activity>
        <activity
            android:name="llc.locallasertag.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            
        </activity>
        <activity  android:name="llc.locallasertag.Lobby"></activity>
        <activity  android:name="llc.locallasertag.App_Settings"></activity>
        
        <activity
            android:name="llc.locallasertag.TimerActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity android:name="llc.locallasertag.PlayerPage"></activity>
        <activity android:name="llc.locallasertag.PlayingPage"></activity>
        
        
    </application>

</manifest>
